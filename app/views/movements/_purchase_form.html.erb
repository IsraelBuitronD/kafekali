<%= form_for(@movement, :as => :purchase, :url => purchases_path ) do |f| %>
  <% if @movement.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@movement.errors.count, "error") %> prohibited this movement from being saved:</h2>

      <ul>
      <% @movement.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :product_id %><br />
    <%= f.collection_select(:product_id, Product.all, :id, :friendly_label, :include_blank => true) %>
  </div>

  <div class="field">
    <%= f.label :provider_id %><br />
    <%= f.collection_select(:provider_id, Provider.all, :id, :name, :include_blank => true) %>
  </div>

  <div class="field">
    <%= f.label :amount %><br />
    <%= f.text_field :amount %>
  </div>

  <div class="field">
    <%= f.label :movement_type_id %><br />
    <%= f.collection_select :movement_type_id, MovementType.incomes, :id, :name %>
  </div>

  <div class="field">
    <%= f.label :note %><br />
    <%= f.text_area :note %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
