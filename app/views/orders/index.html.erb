<h1>Listing orders</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Status</th>
    <th>Datetime</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= order.id %></td>
    <td><%= case order.status
            when 1; 'Opened'
            when 2; 'Closed'
            when 3; 'Paid'
            end%></td>
    <td><%= order.modified_at %></td>
    <td><%= link_to 'Show', order %></td>
    <td><%= link_to 'Edit', edit_order_path(order) %></td>
    <td><%= link_to 'Destroy', order, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

